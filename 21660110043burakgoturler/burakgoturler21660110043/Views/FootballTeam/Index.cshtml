@{
    ViewData["Title"] = "Index";
}

<h1>Futbol Takımı Özellikleri</h1>

@section scripts {
    <p>Script</p>
    }
@section head {
    <p>Head</p>
    }

<p>
    <a asp-action="Create">Yeni Futbol Takımı Ekle</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShortName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EstablishDate)
            </th>
